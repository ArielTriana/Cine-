@model DomainLayer.Batch
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Funciones</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Editar función</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="ScheduleStartTime" />
                <input type="hidden" asp-for="ScheduleEndTime" />
                <input type="hidden" asp-for="CinemaId" />
                <input type="hidden" asp-for="MovieId" />

                <div class="form-group">
                    <label asp-for="TicketPrice" class="control-label"></label>
                    <input asp-for="TicketPrice" class="form-control" />
                    <span asp-validation-form="TicketPrice" class="text-danger">@Html.ValidationMessage("TicketPrice")</span>
                </div>

                <div class="form-group">
                    <label asp-for="TicketPoints" class="control-label"></label>
                    <input asp-for="TicketPoints" class="form-control" />
                    <span asp-validation-form="TicketPoints" class="text-danger">@Html.ValidationMessage("TicketPoints")</span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Editar función" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>