@model DomainLayer.Cinema
@{
    ViewData["Title"] = "Agregar sala";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Salas del cine</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Agregar sala</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Capacity" class="control-label"></label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-form="Capacity" class="text-danger">@Html.ValidationMessage("Capacity")</span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Agregar sala" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>
