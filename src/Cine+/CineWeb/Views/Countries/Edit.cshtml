@model DomainLayer.Country
@{
    ViewData["Title"] = "Editar país";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h1 class="h1">Países</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center text-center wrap p-5">
        <div class="col-xl-2 col-md-1"></div>
        <div class="col-xl-8 col-md-10">
            <div class="row">
                <div class="col-12">
                    <h3>Editar país</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-12">

                    <form method="post" asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control rounded-pill text-center" />
                            <span asp-validation-form="Name" class="text-danger">@Html.ValidationMessage("Name")</span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary rounded-pill">
                                <i class="fa fa-pencil"></i> Editar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-1"></div>
    </div>
</div>
