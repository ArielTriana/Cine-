@model IEnumerable<DomainLayer.Discount>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Descuentos</h1>

<div class="container">

    @if (TempData["message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de descuentos establecidos</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-primary rounded-pill d-block" asp-action="Create" asp-controller="Discounts">Agregar descuento</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m=>m.DiscountedMoney)</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.DiscountedMoney</td>

                            <td>
                                <a asp-controller="Discounts" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary option rounded-125"><i class="fa fa-pencil"></i></a>
                                <a asp-controller="Discounts" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary option rounded-125"><i class="fa fa-trash-o"></i></a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>

</div>