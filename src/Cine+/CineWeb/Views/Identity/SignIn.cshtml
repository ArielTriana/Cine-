@using DomainLayer.Identity
@model SignInModel

@{
    ViewData["Title"] = "Ingresar";
}

<h1>Ingresar</h1>

<form asp-action="SignIn" class="form" method="post">
    @Html.ValidationSummary()

    <div class="form-group col-4">
        <label asp-for="Username">Nombre de usuario</label>
        <input type="text" asp-for="Username" class="form-control"/>
    </div>
    <div class="form-group col-4">
        <label asp-for="Password">Contraseña</label>
        <input type="password" asp-for="Password" class="form-control"/>
    </div>
    <div class="custom-control custom-switch col-4">
        <input type="checkbox" asp-for="RememberMe" class="custom-control-input"/>
        <label asp-for="RememberMe" class="custom-control-label">Recuérdame</label>
    </div>
    <button type="submit" class="btn btn-primary">Ingresar</button>
</form>