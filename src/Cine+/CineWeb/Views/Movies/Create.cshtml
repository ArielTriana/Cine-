@model DomainLayer.Movie
@{
    ViewData["Title"] = "Agregar Película";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Películas</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Agregar Película</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-form="Name" class="text-danger">@Html.ValidationMessage("Title")</span>
                </div>

                <div class="panel panel-default">
                    <div class="panel heading">Países</div>
                    <div class="panel-body">
                        <ul class="list-group">
                            @foreach (var country in ViewBag.Countries)
                            {
                                <li class="list-group-item">
                                    <label><input type="checkbox" name="countries" value="@country.Id" />@country.Name</label>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel heading">Géneros</div>
                    <div class="panel-body">
                        <ul class="list-group">
                            @foreach (var genre in ViewBag.Genres)
                            {
                                <li class="list-group-item">
                                    <label><input type="checkbox" name="genres" value="@genre.Id" />@genre.Name</label>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel heading">Actores</div>
                    <div class="panel-body">
                        <ul class="list-group">
                            @foreach (var actor in ViewBag.Actors)
                            {
                                <li class="list-group-item">
                                    <label><input type="checkbox" name="actors" value="@actor.Id" />@actor.Name</label>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Agregar película" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>



</div>


