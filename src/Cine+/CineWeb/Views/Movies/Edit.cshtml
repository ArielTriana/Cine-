@model DomainLayer.Movie
@{
    ViewData["Title"] = "Editar Película";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var countries = Model.Countries.Select(c => c.Id);
    var genres = Model.Genres.Select(g => g.Id);
    var actors = Model.Actors.Select(a => a.Id);
}


<h1>Películas</h1>

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class=" wrap p-5">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Editar Película</h3>
                    </div>
                </div>
                <form method="post"  asp-action="Edit">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" required class="form-control" />
                    <span asp-validation-form="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Países</label>
                    <select multiple="multiple" data-name="countries" data-field="país(es)" class="list-group form-control ms">

                        @foreach (var country in ViewBag.Countries)
                        {
                            @if (countries.ToList().Contains(country.Id))
                            {
                                <option value="@country.Id" selected>@country.Name</option>
                            }
                            else
                            {
                                <option value="@country.Id">@country.Name</option>
                            }
                        }
                    </select>
                </div>


                <div class="form-group mb-3">
                    <label class="control-label">Géneros</label>
                    <select multiple="multiple" data-name="genres" data-field="género(s)" class="list-group form-control ms">
                        @foreach (var genre in ViewBag.Genres)
                        {
                            @if (genres.ToList().Contains(genre.Id))
                            {
                                <option value="@genre.Id" selected>@genre.Name</option>
                            }
                            else
                            {
                                <option value="@genre.Id">@genre.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Actores</label>
                    <select multiple="multiple" data-name="actors" data-field="actor(es)" class="list-group form-control ms">

                        @foreach (var actor in ViewBag.Actors)
                        {
                            @if (actors.ToList().Contains(actor.Id))
                            {
                                <option value="@actor.Id" selected>@actor.Name</option>
                            }
                            else
                            {
                                <option value="@actor.Id">@actor.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary rounded-pill">
                        <i class="fa fa-pencil"></i> Editar
                    </button>
                </div>
            </form>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>


