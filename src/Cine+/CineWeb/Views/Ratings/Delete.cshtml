@model DomainLayer.Rating
@{
    ViewData["Title"] = "Eliminar rating";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h1 class="h1">Clasificaciones</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center text-center wrap p-5">
        <div class="col-xl-2 col-md-1"></div>
        <div class="col-xl-8 col-md-10">
            <div class="row">
                <div class="col-12">
                    <h3>Eliminar rating</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <form method="post" asp-action="DeleteRating">

                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control rounded-pill text-center" disabled />
                            <span asp-validation-form="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary rounded-pill">
                                <i class="fa fa-trash-o"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-1"></div>
    </div>
</div>