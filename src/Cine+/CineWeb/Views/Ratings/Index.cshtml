@model IEnumerable<DomainLayer.Rating>
@{
    ViewData["Title"] = "Lista de clasificaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Clasificaciones</h1>

<div class="container">

    @if (TempData["message"] != null) 
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de actores</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-primary rounded-pill d-block" asp-action="Create" asp-controller="Ratings">
                <i class="fa fa-plus"></i> Añadir clasificación
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-controller="Ratings" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary option rounded"><i class="fa fa-pencil"></i></a>
                                    <a asp-controller="Ratings" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary option rounded"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="font-italic">No existen ratings registrados</p>
            }
        </div>
    </div>
</div>

