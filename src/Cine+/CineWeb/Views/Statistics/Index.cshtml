@{
    ViewData["Title"] = "Estadísticas";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8 wrap p-5">
            <h3 class="h1">Escoge la estadística</h3>
            <div class="d-inline-flex">
                <a class="btn btn-outline-primary m-2" asp-controller="Statistics" asp-action="TicketPerDay">Por Día</a>
                <a class="btn btn-outline-primary m-2" asp-controller="Statistics" asp-action="TicketPerMonth">Por Mes</a>
                <a class="btn btn-outline-primary m-2" asp-controller="Statistics" asp-action="TicketPerYear">Por Año</a>
                <a class="btn btn-outline-primary m-2" asp-controller="Statistics" asp-action="TicketPerPeriod">En intervalo</a>
            </div>
            <div class="d-inline-flex">
                <a class="btn btn-outline-primary m-2" asp-controller="Statistics" asp-action="TicketMovie">Por película</a>
                <a class="btn btn-outline-primary m-2" asp-controller="Statistics" asp-action="TicketCountry">Por país</a>
                <a class="btn btn-outline-primary m-2" asp-controller="Statistics" asp-action="TicketGenre">Por género </a>
                <a class="btn btn-outline-primary m-2" asp-controller="Statistics" asp-action="TicketRating">Por clasificación </a>

            </div>
        </div>
        <div class="col-2"></div>
    </div>
</div>