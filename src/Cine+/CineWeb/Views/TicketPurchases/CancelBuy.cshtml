
@{
    ViewData["Title"] = "CancelBuy";
    Layout = "_Layout";
}

<h1>Cancelar Compra</h1>

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class=" wrap p-5">
                <p class="font-weight-normal">Introduzca su código de socio si pagó con puntos. Si no, introduzca la tarjeta de crédito con la que realizó el pago</p>
                <form method="post" asp-action="CancelBuy">
                    <div class="form-group mb-3">
                        <label>Código de socio o tarjeta de crédito <input class="form-control" type="text" name="codeCard" /></label>
                    </div>

                    <div class="form-group mb-3">
                        <label>Código de la compra<input class="form-control" type="text" name="codeBuy" /></label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Aceptar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>