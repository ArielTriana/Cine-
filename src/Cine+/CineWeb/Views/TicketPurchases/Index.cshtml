@using DomainLayer;
@model IEnumerable<DomainLayer.Batch>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Compara de entradas</h1>

<div class="container">

    @if (TempData["message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de funciones</h3>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.CinemaId)</td>
                        <td>@Html.DisplayNameFor(m => m.ScheduleStartTime)</td>
                        <td>@Html.DisplayNameFor(m => m.ScheduleEndTime)</td>
                        <td>Película</td>
                        <td>@Html.DisplayNameFor(m => m.TicketPrice)</td>
                        <td>Opciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CinemaId</td>
                            <td>@item.ScheduleStartTime</td>
                            <td>@item.ScheduleEndTime</td>
                            <td>@item.Movie.Title</td>
                            <td>@item.TicketPrice</td>


                            <td>
                                @Html.ActionLink("Comprar entrada física", "PhysicalTicketPurchaseCreate", new { start = item.ScheduleStartTime, end = item.ScheduleEndTime, cinema = item.CinemaId })
                                @Html.ActionLink("Comprar entrada online", "OnlineTicketPurchaseCreate", new { start = item.ScheduleStartTime, end = item.ScheduleEndTime, cinema = item.CinemaId })
                                @Html.ActionLink("Cancelar compra online", "OnlineTicketPurchaseDelete", new { start = item.ScheduleStartTime, end = item.ScheduleEndTime, cinema = item.CinemaId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>

</div>