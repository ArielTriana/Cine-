@model DomainLayer.PhysicalTicketPurchase
@{
    ViewData["Title"] = "Compra de entrada física";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Compra de entrada</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Realizar compra</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="PhysicalTicketPurchaseCreate">


                <div class="panel panel-default">
                    <div class="panel heading">Sillas</div>
                    <div class="panel-body">
                        <ul class="list-group">
                            @foreach (var seat in ViewBag.Seats)
                            {
                                <li class="list-group-item">
                                    <label><input type="radio" name="SeatId" value="@seat.Id" />@seat.Id</label>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel heading">Descuentos</div>
                    <div class="panel-body">
                        <ul class="list-group">
                            @foreach (var discount in ViewBag.Discounts)
                            {
                                <li class="list-group-item">
                                    <label><input type="checkbox" name="Discounts" value="@discount.Id" />@discount.Name. Dinero descontado: @discount.DiscountedMoney</label>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" disabled />
                </div>

                <div class="form-group">
                    <input type="submit" value="Realizar compra" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>