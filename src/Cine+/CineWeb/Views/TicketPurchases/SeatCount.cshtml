
@{
    ViewData["Title"] = "Definir número de sillas";
    Layout = "_Layout";
}

<h1>Compra de entradas</h1>

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class=" wrap p-5">
                <div class="row">
                </div>
                <form method="post" asp-action="TicketsPurchase">

                    <div class="form-group mb-3">
                        <label>Código de socio<input type="text" name="code" class="form-control" /></label>
                    </div>

                    <div class="form-group mb-3" >
                        <label>Número de entradas<input type="number" name="count" class="form-control"/></label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Aceptar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>


