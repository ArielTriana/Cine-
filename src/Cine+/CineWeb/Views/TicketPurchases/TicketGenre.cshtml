@model int
@{
    Layout = "_Layout";
    ViewData["Title"] = "Tickets por género";
}

<div class="container">

    <div class="row wrap d-block p-5 mb-5">
        <div class="row">
            <div class="col-12">
                <h1 class="h1 text-center">Estadísticas del género</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <form method="post" asp-controller="Statistics" asp-action="TicketGenre">
                    <div class="form-group mb-3">
                        <input type="text" data-val="true" class="form-control rounded-pill" name="country" required />
                    </div>
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary rounded-pill">
                            Consultar
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-4"></div>
        </div>
    </div>

    @if (Model >= 0)
    {
        <div class="row justify-content-center">
            <div class="col-12">
                <p class="font-weight-bold">Se vendieron @Model entradas de ese género. </p>
            </div>
        </div>
    }
</div>

